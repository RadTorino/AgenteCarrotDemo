{
	"name": "Python 3",

	"dockerFile": "../Dockerfile",

	"mounts": [
		//"source=${localWorkspaceFolder}/...localpath ,target=...container_path,type=bind,consistency=cached"
	],

	"containerEnv": {
		"DEMO": "demo"
	},
	
	"remoteUser": "root",

